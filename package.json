{
  "name": "dendrobium",
  "displayName": "Dendrobium",
  "description": "an armory system for front-end developers",
  "version": "0.2.1",
  "publisher": "panmenglin",
  "engines": {
    "vscode": "^1.48.0"
  },
  "icon": "resource/dendrobium.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/panmenglin/dendrobium.git"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "blocks",
    "components",
    "library",
    "snippets",
    "frontend",
    "ice"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "demdrobium",
          "title": "Demdrobium",
          "icon": "resource/dendrobium.svg"
        }
      ]
    },
    "views": {
      "demdrobium": [
        {
          "id": "components-view",
          "name": "item",
          "when": ""
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Dendrobium configuration",
      "properties": {
        "dendrobium.language": {
          "type": "string",
          "default": "zh-cn",
          "description": "Plugin language. example: 'en', 'zh-cn'"
        },
        "dendrobium.librarysConfig": {
          "rootPath": "",
          "configPath": ""
        },
        "dendrobium.packageManagementTool": {
          "install": "npm install --save"
        },
        "dendrobium.statistics": {
          "type": "object",
          "default": {
            "reportApi": {
              "url": "",
              "method": "POST"
            }
          },
          "description": "statistics report api"
        }
      }
    },
    "commands": [
      {
        "command": "dendrobium.componentImport",
        "title": "安装组件"
      },
      {
        "command": "dendrobium.treeViewRefresh",
        "title": "刷新"
      },
      {
        "command": "dendrobium.docPreview",
        "title": "查看"
      },
      {
        "command": "dendrobium.snippetInsert",
        "title": "插入"
      },
      {
        "command": "dendrobium.configChange",
        "title": "Dendrobium:configChange"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "dendrobium.componentImport",
          "group": "7_modification"
        }
      ],
      "view/title": [
        {
          "command": "dendrobium.treeViewRefresh",
          "group": "navigation",
          "when": "view == components-view"
        }
      ],
      "view/item/context": [
        {
          "command": "dendrobium.docPreview",
          "group": "inline",
          "when": "view == components-view && viewItem == docs"
        },
        {
          "command": "dendrobium.snippetInsert",
          "group": "inline",
          "when": "view == components-view && viewItem == snippets"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "changeLog": "npx conventional-changelog -p conventional -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/node-fetch": "^2.5.7",
    "@types/vscode": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@babel/generator": "^7.14.5",
    "@babel/parser": "^7.14.6",
    "@babel/traverse": "^7.14.5",
    "@babel/types": "^7.14.5",
    "chalk": "^4.1.0",
    "isomorphic-fetch": "^2.2.1",
    "mv": "^2.1.1",
    "node-fetch": "^2.6.0",
    "ora": "^5.0.0",
    "rimraf": "^3.0.2",
    "targz": "^1.0.1"
  }
}
