{
  "name": "dendrobium",
  "displayName": "Dendrobium",
  "description": "an armory system for front-end developers",
  "version": "0.1.1",
  "publisher": "panmenglin",
  "engines": {
    "vscode": "^1.48.0"
  },
  "icon": "dendrobium.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/panmenglin/dendrobium.git"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "block",
    "material",
    "snippets",
    "ice",
    "umi"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Dendrobium configuration",
      "properties": {
        "dendrobium.language": {
          "type": "string",
          "default": "zh-cn",
          "description": "Plugin language. example: 'en', 'zh-cn'"
        },
        "dendrobium.statistics": {
          "type": "object",
          "default": {
            "reportApi": {
              "url": "",
              "method": "POST",
              "format": {
                "type": "$TYPE",
                "message": "$MESSAGE",
                "wareHouse": "$WAREHOUSE",
                "blockName": "$BLOCKNAME",
                "blockKey": "$BLOCKKEY",
                "other": ""
              }
            }
          },
          "description": "statistics report api"
        },
        "dendrobium.materialWarehouse": {
          "type": "array",
          "default": [
            {
              "name": "scf-blocks",
              "downloadUrl": "",
              "type": "gitlab",
              "branch": "master",
              "path": "scf-block.json"
            }
          ],
          "description": "Your material warehouse configuration."
        }
      }
    },
    "commands": [
      {
        "command": "dendrobium.importBlock",
        "title": "安装组件"
      },
      {
        "command": "dendrobium.createBlock",
        "title": "创建组件"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "dendrobium.importBlock",
          "group": "7_modification"
        }
      ],
      "explorer/context": [
        {
          "command": "dendrobium.createBlock",
          "group": "z_commands"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "changeLog": "npx conventional-changelog -p conventional -i CHANGELOG.md -s -r 0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/node-fetch": "^2.5.7",
    "@types/vscode": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "isomorphic-fetch": "^2.2.1",
    "mv": "^2.1.1",
    "node-fetch": "^2.6.0",
    "ora": "^5.0.0",
    "rimraf": "^3.0.2",
    "targz": "^1.0.1"
  }
}
